<Window
    x:Class="AllForLife.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AllForLife"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Каталог товаров"
    Width="1000"
    Height="800"
    FontFamily="Comic Sans MS"
    Icon="/Resources/picture.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <local:SaleConverter x:Key="SaleConv" />
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid Background="#76e383">

            <StackPanel
                x:Name="userPanel"
                HorizontalAlignment="Left"
                Visibility="Collapsed">

                <StackPanel Orientation="Horizontal">

                    <TextBlock
                        Margin="10"
                        FontSize="15"
                        Text="имя пользователя: " />

                    <TextBlock
                        x:Name="usernameTB"
                        Margin="5"
                        FontSize="15"
                        FontWeight="Bold" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">

                    <TextBlock
                        Margin="10"
                        FontSize="15"
                        Text="ФИО: " />

                    <TextBlock
                        x:Name="nameTB"
                        Margin="5"
                        FontSize="15"
                        FontWeight="Bold" />
                </StackPanel>

            </StackPanel>

            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">

                <Button
                    x:Name="authBTN"
                    Margin="10"
                    Content="авторизация"
                    FontSize="15" 
                    Width="100"
                    Style="{StaticResource btnStyle}" Click="authBTN_Click"/>
                <Button
                    x:Name="regBTN"
                    Margin="10"
                    Content="регистрация"
                    FontSize="15" />

            </StackPanel>
        </Grid>

        <TextBlock
            x:Name="countItems"
            Grid.Row="3"
            FontSize="20"
            Text="Показано товаров: " />

        <Button x:Name="ordersBtn" Content="заказы"
                FontSize="14"
                Style="{StaticResource btnStyle}"
                Grid.Row="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="200"
                Visibility="Collapsed"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="10"
                    FontSize="20"
                    Text="Диапазон скидки" />

                <ComboBox
                    x:Name="SaleCB"
                    Width="150"
                    Margin="10"
                    SelectionChanged="SaleCB_SelectionChanged" />

            </StackPanel>

            <StackPanel
                Grid.Column="1"
                Height="50"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="Поиск" />

                <TextBox
                    Name="searchTB"
                    Width="200"
                    Height="20"
                    Margin="10"
                    VerticalAlignment="Center"
                    SelectionChanged="searchTB_SelectionChanged" />

            </StackPanel>

        </Grid>

        <ListBox
            x:Name="productsLB"
            Grid.Row="2"
            Margin="5"
            HorizontalAlignment="Stretch"
            BorderBrush="Black"
            BorderThickness="1"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
            ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <ListBox.ItemTemplate>
                <DataTemplate>

                    <Border Style="{StaticResource LBborderStyle}">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="680" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>

                            <Border Style="{StaticResource LBborderStyle}">

                                <Image
                                    MaxWidth="150"
                                    MaxHeight="150"
                                    Margin="3"
                                    Source="{Binding ImageURL}" />
                            </Border>

                            <Border Grid.Column="1" Style="{StaticResource LBborderStyle}">

                                <StackPanel Margin="10">
                                    <TextBlock
                                        x:Name="prodNameTB"
                                        FontWeight="Bold"
                                        Style="{StaticResource ProdLstStyle}"
                                        Text="{Binding Name}" />

                                    <TextBlock
                                        x:Name="categoryTB"
                                        Style="{StaticResource ProdLstStyle}"
                                        Text="{Binding Category, StringFormat='Категория товара: {0}'}" />



                                    <TextBlock
                                        x:Name="DescTB"
                                        Style="{StaticResource ProdLstStyle}"
                                        Text="{Binding Description, StringFormat='Описание товара: {0}'}" />

                                    <TextBlock
                                        x:Name="PriceTB"
                                        Style="{StaticResource ProdLstStyle}"
                                        Text="{Binding Price, StringFormat='Стоимость: {0} руб.'}" />

                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Style="{StaticResource LBborderStyle}">

                                <TextBlock
                                    x:Name="saleTB"
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    Foreground="{Binding CurrentSale, Converter={StaticResource SaleConv}}"
                                    Text="{Binding CurrentSale, StringFormat=' {0} %'}" />

                            </Border>
                        </Grid>

                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>


        </ListBox>

    </Grid>
</Window>
