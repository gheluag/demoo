<Window x:Class="AllForLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AllForLife"
        mc:Ignorable="d"
        Title="Каталог товаров" Height="800" Width="1000"
        FontFamily="Comic Sans MS"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="/Resources/picture.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Background="#76e383">
            <StackPanel x:Name="userPanel"
                        HorizontalAlignment="Right">

                <TextBlock x:Name="usernameTB"
                           FontWeight="Bold"
                           Margin="5"/>
            </StackPanel>
        </Grid>

        <ListBox x:Name="productsLB"
                 Grid.Row="1"
                 BorderBrush="Black"
                 BorderThickness="1"
                 Margin="5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    
                    <Border 
                        Style="{StaticResource LBborderStyle}">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Border
                                Style="{StaticResource LBborderStyle}">

                                <Image Source="/Resources/picture.png"
                                       MaxWidth="150"
                                       MaxHeight="150"
                                       Margin="3"/>
                            </Border>
                            
                            
                            
                        </Grid>
                        
                    </Border>
                   
                </DataTemplate>
            </ListBox.ItemTemplate>
            
            
        </ListBox>
        
    </Grid>
</Window>
